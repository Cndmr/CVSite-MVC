@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                               <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Ayarlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td>@item.durum</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/SayfaGetir/@item.ID">
                                                        <i class="fas fa-pencil-alt"> Düzenle</i>
                                                    </a>
                                               
                                                
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/Sil/@item.ID">
                                                        <i class="fas fa-trash"> Durum</i>
                                                    </a>
                                                
                                                    <a class="btn btn-success btn-sm" href="/SosyalMedya/Kaldır/@item.ID">
                                                        <i class="fas fa-trash"> Kaldır</i>
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

                        <h2 class="modal-title">Sosyal Medya Ekleme Paneli</h2></div>
                        <form method="post" action="/SosyalMedya/Ekle/">
                            <div class="modal-body">
                                <label>Sosyal Medya İsmi</label>
                                <input type="text" name="Ad" class="form-control" />
                                <br />
                                <label>Sosyal Medya Linki</label>
                                <input type="text" name="link" class="form-control" />
                                <br />
                                <label>İkon Değeri</label>
                                <input type="text" name="ikon" class="form-control" />
                                <br />
                                <button class="btn btn-info">Kaydet</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>


        </div>
    </div>
</body>
</html>


